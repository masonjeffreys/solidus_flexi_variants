<% content_for :page_actions do %>
  <% if can?(:create, Spree::ProductCustomizationType) %>
    <li id="new_product_product_customization_type_link">
      <%= link_to Spree.t('add_product_customization_type'), spree.available_admin_product_product_customization_types_url(@product), id: 'admin_new_product_customization_type', class: 'btn btn-primary', remote: true %>
    </li>
  <% end %>
<% end %>

<%= render partial: 'spree/admin/shared/product_tabs', locals: {current: "Product Customization Types"} %>
<%= render partial: 'spree/shared/error_messages', locals: { target: @product } %>

<% admin_breadcrumb(Spree.t('product_customization_types')) %>

<div id="selected-customization-types">
  <%= render 'selected' %>
</div>

<p>To create new, edit, or delete Product Customization Types, <%= link_to 'Click Here', admin_product_customization_types_path %></p>
